-- Tabela: usuario
CREATE TABLE usuario (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nome VARCHAR(100) NOT NULL,
  cpf VARCHAR(11) NOT NULL UNIQUE,
  login VARCHAR(100) NOT NULL UNIQUE,
  senha VARCHAR(100) NOT NULL,
  email VARCHAR(100) NOT NULL UNIQUE,
  path_img VARCHAR(255) DEFAULT NULL,
  cargo VARCHAR(255) NOT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Tabela: evento
CREATE TABLE evento (
  id INT AUTO_INCREMENT PRIMARY KEY,
  nome VARCHAR(100) NOT NULL,
  data_inicio DATE NOT NULL,
  data_final DATE NOT NULL,
  local VARCHAR(100) NOT NULL,
  organizacao VARCHAR(100) NOT NULL,
  carga_horaria INT NOT NULL,
  presenca_minima INT NOT NULL,
  ativo TINYINT(1) DEFAULT 1,
  usuario_id INT NOT NULL,
  FOREIGN KEY (usuario_id) REFERENCES usuario(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Tabela: atividade
CREATE TABLE atividade (
  id INT AUTO_INCREMENT PRIMARY KEY,
  descricao VARCHAR(200) NOT NULL,
  responsavel VARCHAR(100) NOT NULL,
  data DATE NOT NULL,
  hora_inicio TIME NOT NULL,
  hora_fim TIME NOT NULL,
  local VARCHAR(100) NOT NULL,
  tipo VARCHAR(50) NOT NULL,
  id_evento INT NOT NULL,
  id_responsavel INT NOT NULL,
  FOREIGN KEY (id_evento) REFERENCES evento(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE,
  FOREIGN KEY (id_responsavel) REFERENCES usuario(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Tabela: usuario_atividade (presen√ßas)
CREATE TABLE usuario_atividade (
  id_usuario INT NOT NULL,
  id_atividade INT NOT NULL,
  data DATE NULL,
  hora TIME NULL,
  presenca BOOLEAN NOT NULL,
  PRIMARY KEY (id_usuario, id_atividade),
  FOREIGN KEY (id_usuario) REFERENCES usuario(id)
    ON DELETE CASCADE,
  FOREIGN KEY (id_atividade) REFERENCES atividade(id)
    ON DELETE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Tabela: competicao
CREATE TABLE competicao (
  id INT AUTO_INCREMENT PRIMARY KEY,
  id_evento INT,
  nome VARCHAR(255),
  local VARCHAR(255),
  modalidade VARCHAR(255),
  data_inicio DATE,
  data_final DATE,
  status VARCHAR(255),
  UNIQUE(id),
  FOREIGN KEY (id_evento) REFERENCES evento(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Tabela: equipe
CREATE TABLE equipe (
  id INT AUTO_INCREMENT PRIMARY KEY,
  id_comp INT,
  nome VARCHAR(255) NOT NULL,
  UNIQUE(id),
  FOREIGN KEY (id_comp) REFERENCES competicao(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;

-- Tabela: atleta
CREATE TABLE atleta (
  id_equipe INT NOT NULL,
  id_usuario INT NOT NULL,
  PRIMARY KEY (id_equipe, id_usuario),
  FOREIGN KEY (id_equipe) REFERENCES equipe(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE,
  FOREIGN KEY (id_usuario) REFERENCES usuario(id)
    ON DELETE CASCADE
    ON UPDATE CASCADE
) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;
